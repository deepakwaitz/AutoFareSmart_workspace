<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1300dp"
    android:background="@drawable/background"
    android:focusable="true">


    <RelativeLayout
        android:id="@+id/details_1_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        >

        <ImageView
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:id="@+id/details_1"
            android:src="@drawable/detail_src_des"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_2_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_1_layout">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceListItem"
            android:text="Source"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/source"

            android:layout_marginLeft="96dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Destination"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/destination"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/source"
            android:layout_marginLeft="170dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_3_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_2_layout"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:id="@+id/details_distance"
            android:src="@drawable/details_distance"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_4_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_3_layout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distance"
            android:textStyle="bold"
            android:textSize="35sp"
            android:id="@+id/distance"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/details_5_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_4_layout"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="700dp"
            android:layout_height="200dp"
            android:id="@+id/details_fare"
            android:src="@drawable/detail_day_nit"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/details_6_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details_5_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Day Fare"
            android:textSize="35sp"
            android:textStyle="bold"
            android:id="@+id/dayFare"
            android:layout_marginLeft="150dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Night"
            android:textSize="35sp"
            android:textStyle="bold"
            android:id="@+id/nightFare"
            android:layout_marginLeft="192dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/dayFare" />
    </RelativeLayout>

</RelativeLayout>
    </ScrollView>